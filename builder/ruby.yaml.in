steps:
  - name: 'gcr.io/$PROJECT/ruby-build-app:$TAG'
  - name: 'gcr.io/$PROJECT/ruby-gen-dockerfile:$TAG'
    args:
    - '--base-image'
    - 'gcr.io/google-appengine/ruby:$TAG'
    - '--enable-packages'
  - name: 'gcr.io/cloud-builders/docker:latest'
    args: ['build', '-t', '$_OUTPUT_IMAGE', '.']
images:
  - '$_OUTPUT_IMAGE'
